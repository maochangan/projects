                id,
            </if>
            <if test="openId != null">
                open_id,
            </if>
            <if test="companyNo != null">
                company_no,
            </if>
            <if test="nickName != null">
                nick_name,
            </if>
            <if test="sex != null">
                sex,
            </if>
            <if test="country != null">
                country,
            </if>
            <if test="province != null">
                province,
            </if>
            <if test="city != null">
                city,
            </if>
            <if test="headImgPath != null">
                head_img_url,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
