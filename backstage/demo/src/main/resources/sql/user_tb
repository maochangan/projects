CREATE TABLE wx_user
(
  id int(8) PRIMARY KEY NOT NULL AUTO_INCREMENT,
  open_id varchar(100) NOT NULL,
  nick_name varchar(100) NOT NULL,
  sex char(2),
  province varchar(100),
  city varchar(100),
  country varchar(100),
  head_img_url varchar(255)
);
CREATE INDEX wx_user_id_index ON wx_user (id);

-- auto-generated definition
create table wx_count
(
  id       int(8) auto_increment
    primary key,
  user_id  int(8)       not null,
  use_type varchar(100) not null,
  use_time varchar(225) not null,
  use_date datetime     not null,
  constraint fk
  foreign key (user_id) references wx_user (id)
);

create index wx_count_user_id_index
  on wx_count (user_id);




